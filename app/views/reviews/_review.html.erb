<div class="review-<%= review.id%>">

	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"><%= review.comment %></p>


	<% if user_signed_in? %>

		<% if review.user_id == current_user.id %>


				<%= link_to "Edit", edit_book_review_path(review.book, review) %>&nbsp ||
				<%= link_to "Delete", book_review_path(review.book, review),remote: true, method: :delete, data: { confirm: "Are you sure?" }%>

			
		
		<% end %>	

	<% end %>

</div>
<hr>		
<script>
	$('.review-rating').raty({
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>